@model GraniteHouse.Models.ApplicationUser
@{
    ViewData["Title"] = "Delete";
}

<br />
<h2 class="text-info"> Delete Admin User</h2>

<form asp-action="Delete" method="post">
    
    <div class="p-4 table-bordered rounded">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label class="sr-only" asp-for="Name"></label>
            <input class="form-control" readonly asp-for="Name" />
           
        </div>
        <div class="form-group">
            <label class="sr-only" asp-for="Email"></label>
            <input class="form-control" readonly asp-for="Email" />

        </div>
        <div class="form-group">
            <label class="sr-only" asp-for="PhoneNumber"></label>
            <input class="form-control" readonly asp-for="PhoneNumber" />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary" asp-route-id="@Model.Id">Delete</button>
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>

     </div>
    


</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
