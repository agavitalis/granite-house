@model GraniteHouse.Models.ApplicationUser
@{
    ViewData["Title"] = "Edit";
}

<br />
<h2 class="text-info"> Edit Admin User</h2>

<form asp-action="Edit" method="post">
   
    <div class="p-4 table-bordered rounded">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label class="sr-only" asp-for="Name"></label>
            <input class="form-control" asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="sr-only" asp-for="Email"></label>
            <input class="form-control" readonly asp-for="Email" />

        </div>
        <div class="form-group">
            <label class="sr-only" asp-for="PhoneNumber"></label>
            <input class="form-control" asp-for="PhoneNumber" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary" asp-route-id="@Model.Id">Edit</button>
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>

    </div>
   


</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
