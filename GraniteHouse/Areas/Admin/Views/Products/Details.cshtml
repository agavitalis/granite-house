@model GraniteHouse.Models.ViewModels.ProductViewModel
@using GraniteHouse.Extensions
@{
    ViewData["Title"] = "Details";
}

<br />
<h2 class="text-info">Product Details</h2>
  
    <div class="col col-md-8">
        <input hidden asp-for="Products.Id" />
        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="Products.Name"></label>
            </div>
            <div class="col-md-5">
                <input class="form-control" readonly asp-for="Products.Name" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="Products.Price"></label>
            </div>
            <div class="col-md-5">
                <input class="form-control" readonly asp-for="Products.Price" />
               
            </div>
        </div>
       
        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="ProductTypes"></label>
            </div>
            <div class="col-md-5">
                <input class="form-control" readonly asp-for="Products.ProductTypes.Name" />

            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="SpecialTags"></label>
            </div>
            <div class="col-md-5">
                <input class="form-control" readonly asp-for="Products.SpecialTags.Name" />
               
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="Products.ShadeColor"></label>
            </div>
            <div class="col-md-5">

                <input class="form-control" readonly asp-for="Products.ShadeColor" />
                
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="Products.Avaliable"></label>
            </div>
            <div class="col-md-5">
                <input type="checkbox" readonly asp-for="Products.Avaliable" />

            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
    <div class=" col col-md-1"></div>
    <div class=" col col-md-3">
        <img src="@Model.Products.Image" width="100%" style="border-radius:5px; border:1px" />
    </div>
   