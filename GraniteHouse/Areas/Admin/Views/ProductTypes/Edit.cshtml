@model GraniteHouse.Models.ProductTypes
@{
    ViewData["Title"] = "Edit";
}

<br />
<h2 class="text-info"> Edit Product Type</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="p-4 table-bordered rounded">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>
    <div class="form-group">
        <label class="sr-only" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary" asp-route-id="@Model.Id">Submit</button>
        <a asp-action="Index" class="btn btn-success">Back to List</a>
    </div>


</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
